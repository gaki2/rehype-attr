{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2015",
    "moduleResolution": "bundler",
    "sourceMap": false,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "lib",
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
